/**
 * @see https://www.typescriptlang.org/tsconfig
 */
{
	"compilerOptions": {
		"allowJs": true,
		"baseUrl": ".",
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "error",
		"isolatedModules": true,
		"lib": ["DOM", "DOM.Iterable", "ES2017"],
		"module": "ES2020",
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": {
			"+game": ["src/game/index"],
			"+game/turn-taking": ["src/game/turn-taking/index"],
			"+game/world-age": ["src/game/world-age/index"],
			"+game/world-layout": ["src/game/world-layout/index"],
			"+utilities": ["src/utilities/index"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2017",
		"useDefineForClassFields": true
	},
	"exclude": [".yarn", "build", "coverage", "node_modules"],
	"include": ["**/*.cjs", "**/*.mjs", "**/*.ts", "**/*.tsx"]
}
