/**
 * @see https://www.typescriptlang.org/tsconfig
 */
{
	"compilerOptions": {
		"allowJs": false,
		"baseUrl": ".",
		"checkJs": false,
		"esModuleInterop": true,
		"exactOptionalPropertyTypes": false,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"importsNotUsedAsValues": "error",
		"incremental": true,
		"isolatedModules": true,
		"lib": ["DOM", "DOM.Iterable", "ES2018"],
		"module": "ES2022",
		"moduleResolution": "Node",
		"noEmit": true,
		"paths": {
			"+game": ["src/game/index"],
			"+game/turn-taking": ["src/game/turn-taking/index"],
			"+game/world-age": ["src/game/world-age/index"],
			"+game/world-layout": ["src/game/world-layout/index"],
			"+utilities": ["src/utilities/index"]
		},
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2018",
		"tsBuildInfoFile": "./node_modules/.cache/typescript/.tsbuildinfo",
		"useDefineForClassFields": true
	},
	"exclude": [
		".git",
		".idea",
		".vscode",
		".yarn",
		"build",
		"coverage",
		"node_modules",
		".pnp.*"
	],
	"include": [
		"**/*.ts",
		"**/*.tsx",
		"**/eslint.config.js",
		"**/prettier.config.cjs"
	]
}
